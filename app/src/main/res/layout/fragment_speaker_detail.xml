<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.SpeakerDetail">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/speaker_detail_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="30dp"
            android:paddingBottom="30dp"
            android:text="Speaker name"
            android:textAlignment="center"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/speaker_detail_photo"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:src="@drawable/adam_rush" />

        <TextView
            android:id="@+id/speaker_detail_biography"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:padding="20dp"
            android:text="Biography" />

        <TextView
            android:id="@+id/speaker_detail_twitter"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:padding="20dp"
            android:text="Twitter handle"
            android:textAlignment="center"
            android:textColor="@color/material_dynamic_primary50"
            android:textSize="24sp" />
    </LinearLayout>

</FrameLayout>